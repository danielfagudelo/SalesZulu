@page "/categories"
@inject IRepository repository

<h3>Categorias</h3>

<a class="btn btn-primary mb-3" href="/categories/create">Nueva Categoria</a>

<GenericList MyList="Categories">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Categoria</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Categories!)
                {
                    <tr>
                        <td>
                            <a class="btn btn-warning"> href="/categories/edit/@category.Id" Editar</a>
                            <button class="btn btn-danger">Borrar</button>
                        </td>
                        <td>
                            @category.Name
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>

}

@code {

    public List<Category>? Categories { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var httpResponse = await repository.Get<List<Category>>("/api/categories");
        Categories = httpResponse.Response;
    }

}
